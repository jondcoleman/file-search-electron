{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "comma-dangle": 0,
        "react/prefer-es6-class": 0,
        "object-shorthand": 0,
        "no-underscore-dangle": 0,
        "func-names": 0,
        "space-before-function-paren": [
            "error",
            "never"
        ]
    }
}